<job>
problem_id = ic_exocubed  # problem ID: basename of output filenames

<output1>
file_type  = hst         # History data dump
dt         = 14400        # time increment between outputs

<output2>
#ghost_zones= true
file_type  = netcdf    # Binary data dump
variable   = prim        # variables to be output
dt         = 86400         # time increment between outputs

<output3>
#ghost_zones= true
file_type  = netcdf
variable   = uov
dt         = 86400

<time>
cfl_number = 0.7          # The Courant, Friedrichs, & Lewy (CFL) Number
nlim       = -1         # cycle limit
tlim       = 1.0E8           # time limit
xorder     = 5            # horizontal reconstruction order
integrator = rk3          # integration method

<mesh>
nx1        = 3            # Number of zones in X1-direction
x1min      = 7.0000E7.           # minimum value of X1
x1max      = 7.0001E7.           # maximum value of X1
ix1_bc     = reflecting   # inner-X1 boundary flag
ox1_bc     = reflecting   # outer-X1 boundary flag

nx2        = 1100            # Number of zones in X2-direction
x2min      = 0.           # minimum value of X2
x2max      = 1.E3         # maximum value of X2
ix2_bc     = periodic   # inner-X2 boundary flag
ox2_bc     = periodic   # outer-X2 boundary flag

nx3        = 1650           # Number of zones in X3-direction
x3min      = 0.           # minimum value of X3
x3max      = 1.E3         # maximum value of X3
ix3_bc     = periodic   # inner-X3 boundary flag
ox3_bc     = periodic   # outer-X3 boundary flag

ReferencePressure = 1.E5
PressureScaleHeight = 10.E3

<meshblock>
nx1        = 3
nx2        = 275
nx3        = 275

<hydro>
gamma       = 1.4         # gamma = C_p/C_v

<problem>
phi0       = 1.0E6
ros_fac    = 4000.
rand_lim   = 0.0
vfile      = field.dat