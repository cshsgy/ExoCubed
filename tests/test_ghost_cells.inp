<job>
problem_id = cubed  # problem ID: basename of output filenames

<output1>
file_type  = hst         # History data dump
dt         = 15.        # time increment between outputs

<output2>
ghost_zones= true
file_type  = tab    # Binary data dump
variable   = prim        # variables to be output
dt         = 15.         # time increment between outputs

<output3>
ghost_zones=true
file_type  = tab
variable   = uov
dt         = 15.

<time>
cfl_number = 0.9          # The Courant, Friedrichs, & Lewy (CFL) Number
nlim       = 1            # cycle limit
tlim       = 90           # time limit
xorder     = 1            # horizontal reconstruction order
integrator = rk3          # integration method

<mesh>
nx1        = 4            # Number of zones in X1-direction
x1min      = 0.           # minimum value of X1
x1max      = 1.           # maximum value of X1
ix1_bc     = reflecting   # inner-X1 boundary flag
ox1_bc     = reflecting   # outer-X1 boundary flag

nx2        = 160            # Number of zones in X2-direction
x2min      = 0.           # minimum value of X2
x2max      = 1.E3         # maximum value of X2
ix2_bc     = periodic   # inner-X2 boundary flag
ox2_bc     = periodic   # outer-X2 boundary flag

nx3        = 240           # Number of zones in X3-direction
x3min      = 0.           # minimum value of X3
x3max      = 1.E3         # maximum value of X3
ix3_bc     = periodic   # inner-X3 boundary flag
ox3_bc     = periodic   # outer-X3 boundary flag

<meshblock>
nx1        = 4
nx2        = 80
nx3        = 80

<hydro>
gamma       = 1.4         # gamma = C_p/C_v
active      = disabled
